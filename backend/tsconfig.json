{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/",
    "rootDir": ".",
    "baseUrl": ".",
        "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "composite": true,
    "types":["node"],
    "typeRoots": ["./node_modules/@types","./types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "typings/*",
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
}